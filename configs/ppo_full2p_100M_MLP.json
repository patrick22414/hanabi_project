{
  "seed": -1,
  "iterations": 10000,
  "env_config": {
    "preset": "full",
    "players": 2,
    "encoding_type": "prev_action",
    "buffer_size": 2
  },
  "agent_config": {
    "policy": {
      "type": "MLP",
      "hidden_size": 512,
      "num_layers": 2
    },
    "value_fn": {
      "type": "MLP",
      "hidden_size": 512,
      "num_layers": 2
    }
  },
  "collect_config": {
    "collection_type": "frame",
    "collection_size": 10000,
    "parallel": 100,
    "gae_gamma": 0.99,
    "gae_lambda": 0.95
  },
  "train_config": {
    "epochs": 5,
    "batch_size": 1024,
    "policy_optimizer": {
      "lr": 1e-3,
      "weight_decay": 1e-5
    },
    "value_fn_optimizer": {
      "lr": 1e-3,
      "weight_decay": 1e-5
    },
    "ppo_clip": 0.2,
    "entropy_coeff": 0.0
  },
  "eval_config": {
    "eval_every": 1,
    "episodes": 100
  }
}
